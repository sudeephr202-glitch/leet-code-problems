class Solution {
    public int numberOfPaths(int[][] grid, int k) {
        int m = grid.length, n = grid[0].length;
        int MOD = 1_000_000_007;

        // dp[i][j][r] = number of ways to (i,j) with remainder r
        int[][][] dp = new int[m][n][k];

        dp[0][0][grid[0][0] % k] = 1;

        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {

                int val = grid[i][j] % k;

                for (int r = 0; r < k; r++) {
                    // skip start cell
                    if (i == 0 && j == 0) continue;

                    long ways = 0;

                    // from top
                    if (i > 0) ways += dp[i - 1][j][r];

                    // from left
                    if (j > 0) ways += dp[i][j - 1][r];

                    if (ways > 0) {
                        int newR = (r + val) % k;
                        dp[i][j][newR] = (int)((dp[i][j][newR] + ways) % MOD);
                    }
                }
            }
        }

        return dp[m - 1][n - 1][0];
    }
}
