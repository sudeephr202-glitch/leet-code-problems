class Solution {
    public int minimumOneBitOperations(int n) {
        if (n == 0) return 0;
        int k = 0;
        // Find the position of the most significant bit (MSB)
        while ((1 << (k + 1)) <= n) {
            k++;
        }
        // Use recursive Gray code relationship
        return (1 << (k + 1)) - 1 - minimumOneBitOperations(n ^ (1 << k));
    }
}

