class Solution {
    public int maxOperations(String s) {
        int n = s.length();
        long ans = 0;    // use long for intermediate safety
        long ones = 0;

        for (int i = 0; i < n; ++i) {
            if (s.charAt(i) == '1') {
                ones++;
            } else {
                // Add only if this zero is the last in its zero-block
                if (i == n - 1 || s.charAt(i + 1) == '1') {
                    ans += ones;
                }
            }
        }

        return (int) ans;
    }
}
