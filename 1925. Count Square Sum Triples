class Solution {
    public int countTriples(int n) {
        int count = 0;
        
        for (int a = 1; a <= n; a++) {
            int a2 = a * a;
            for (int b = 1; b <= n; b++) {
                int c2 = a2 + b * b;
                int c = (int) Math.sqrt(c2);
                if (c <= n && c * c == c2) {
                    count++;
                }
            }
        }
        
        return count;
    }
}
