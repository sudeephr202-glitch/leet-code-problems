import java.util.*;

class Solution {

    static class DSU {
        int[] parent;

        DSU(int n) {
            parent = new int[n];
            for (int i = 0; i < n; i++) parent[i] = i;
        }

        int find(int x) {
            if (parent[x] != x)
                parent[x] = find(parent[x]);
            return parent[x];
        }

        void union(int a, int b) {
            int pa = find(a), pb = find(b);
            if (pa != pb) parent[pb] = pa;
        }

        void reset(int x) {
            parent[x] = x;
        }
    }

    public List<Integer> findAllPeople(int n, int[][] meetings, int firstPerson) {
        Arrays.sort(meetings, (a, b) -> a[2] - b[2]);

        boolean[] knows = new boolean[n];
        knows[0] = true;
        knows[firstPerson] = true;

        DSU dsu = new DSU(n);
        dsu.union(0, firstPerson);

        int i = 0;
        while (i < meetings.length) {
            int time = meetings[i][2];
            List<Integer> people = new ArrayList<>();

            // process all meetings at same time
            while (i < meetings.length && meetings[i][2] == time) {
                int x = meetings[i][0];
                int y = meetings[i][1];
                dsu.union(x, y);
                people.add(x);
                people.add(y);
                i++;
            }

            // group by connected component
            Map<Integer, List<Integer>> groups = new HashMap<>();
            for (int p : people) {
                int root = dsu.find(p);
                groups.computeIfAbsent(root, k -> new ArrayList<>()).add(p);
            }

            // spread secret within component
            for (List<Integer> group : groups.values()) {
                boolean hasSecret = false;
                for (int p : group) {
                    if (knows[p]) {
                        hasSecret = true;
                        break;
                    }
                }
                if (hasSecret) {
                    for (int p : group) knows[p] = true;
                }
            }

            // reset DSU for next time
            for (int p : people) dsu.reset(p);
        }

        List<Integer> result = new ArrayList<>();
        for (int p = 0; p < n; p++) {
            if (knows[p]) result.add(p);
        }
        return result;
    }
}
