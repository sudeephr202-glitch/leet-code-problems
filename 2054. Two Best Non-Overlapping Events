import java.util.*;

class Solution {
    public int maxTwoEvents(int[][] events) {
        int n = events.length;

        // Sort by start time
        Arrays.sort(events, (a, b) -> a[0] - b[0]);

        // Sort by end time
        int[][] endSorted = events.clone();
        Arrays.sort(endSorted, (a, b) -> a[1] - b[1]);

        int ans = 0;
        int maxEndedValue = 0;
        int j = 0;

        // Sweep line
        for (int i = 0; i < n; i++) {
            int start = events[i][0];
            int value = events[i][2];

            // Include all events that ended before this starts
            while (j < n && endSorted[j][1] < start) {
                maxEndedValue = Math.max(maxEndedValue, endSorted[j][2]);
                j++;
            }

            // Combine best previous with current
            ans = Math.max(ans, maxEndedValue + value);

            // Single event case
            ans = Math.max(ans, value);
        }

        return ans;
    }
}
