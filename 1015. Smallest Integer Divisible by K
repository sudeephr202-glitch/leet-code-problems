class Solution {
    public int smallestRepunitDivByK(int k) {
        // If k has factors 2 or 5, no all-ones number can be divisible by k
        if (k % 2 == 0 || k % 5 == 0) return -1;

        int remainder = 0;

        // We will try lengths from 1 to k (Pigeonhole Principle)
        for (int length = 1; length <= k; length++) {
            remainder = (remainder * 10 + 1) % k;
            
            if (remainder == 0) {
                return length;   // Found the answer
            }
        }

        return -1; // Should not reach here for valid cases
    }
}
