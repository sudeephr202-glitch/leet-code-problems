class Solution {
    public int countCollisions(String directions) {
        int n = directions.length();
        char[] d = directions.toCharArray();

        // Step 1: skip leading L's
        int left = 0;
        while (left < n && d[left] == 'L') {
            left++;
        }

        // Step 2: skip trailing R's
        int right = n - 1;
        while (right >= 0 && d[right] == 'R') {
            right--;
        }

        // Step 3: count all L and R in the remaining segment
        int collisions = 0;
        for (int i = left; i <= right; i++) {
            if (d[i] == 'L' || d[i] == 'R') {
                collisions++;
            }
        }
        
        return collisions;
    }
}
