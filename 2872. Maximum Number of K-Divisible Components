class Solution {
    int result = 0;
    List<Integer>[] g;
    int k;

    public int maxKDivisibleComponents(int n, int[][] edges, int[] values, int k) {
        this.k = k;
        g = new ArrayList[n];
        for (int i = 0; i < n; i++) g[i] = new ArrayList<>();

        for (int[] e : edges) {
            g[e[0]].add(e[1]);
            g[e[1]].add(e[0]);
        }

        dfs(0, -1, values);
        return result;
    }

    private long dfs(int node, int parent, int[] values) {
        long sum = values[node];

        for (int nei : g[node]) {
            if (nei == parent) continue;
            sum += dfs(nei, node, values);
        }

        if (sum % k == 0) {
            result++;   // this subtree forms a valid component
            return 0;   // cut here â†’ return zero to parent
        }

        return sum; // pass upward for parent's sum
    }
}
