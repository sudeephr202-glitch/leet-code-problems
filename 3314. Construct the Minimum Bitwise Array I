class Solution {
    public int[] minBitwiseArray(List<Integer> nums) {
        int n = nums.size();
        int[] ans = new int[n];

        for (int i = 0; i < n; i++) {
            int val = nums.get(i);

            // If even, impossible
            if ((val & 1) == 0) {
                ans[i] = -1;
                continue;
            }

            // Count trailing ones
            int count = 0;
            int temp = val;
            while ((temp & 1) == 1) {
                count++;
                temp >>= 1;
            }

            // Smallest valid x
            ans[i] = val - (1 << (count - 1));
        }

        return ans;
    }
}
