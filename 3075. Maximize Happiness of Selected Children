import java.util.*;

class Solution {
    public long maximumHappinessSum(int[] happiness, int k) {
        // Sort in descending order
        Arrays.sort(happiness);
        int n = happiness.length;

        long sum = 0;
        for (int i = 0; i < k; i++) {
            int curr = happiness[n - 1 - i] - i;
            if (curr <= 0) break;
            sum += curr;
        }
        return sum;
    }
}
